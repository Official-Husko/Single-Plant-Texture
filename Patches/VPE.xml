<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Plants Expanded</li>
    </mods>
    <Operation Class="PatchOperationSequence">
      <success>Always</success>
      <operations>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="VCE_Grass"]/plant/maxMeshCount</xpath>
          <value>
            <maxMeshCount>1</maxMeshCount>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="VCE_TallGrass"]/plant/maxMeshCount</xpath>
          <value>
            <maxMeshCount>1</maxMeshCount>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="VCE_Onion"]/plant/maxMeshCount</xpath>
          <value>
            <maxMeshCount>1</maxMeshCount>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="VCE_Pepper"]/plant/maxMeshCount</xpath>
          <value>
            <maxMeshCount>1</maxMeshCount>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="VCE_Beet"]/plant/maxMeshCount</xpath>
          <value>
            <maxMeshCount>1</maxMeshCount>
          </value>
        </li>

      </operations>
    </Operation>
  </Operation>
</Patch>